force_xinerama yes

exec_always --no-startup-id xrandr --output 'eDP-1' --mode '2880x1800' --scale '0.75x0.75' --dpi '120'
exec_always --no-startup-id $HOME/.config/polybar/launch.sh
exec --no-startup-id light-locker --no-late-locking &!
