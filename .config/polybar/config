[bar/base]
monitor = eDP1
width = 100%
height = 25
;offset-x = 1%
;offset-y = 1%
radius = 3
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 2
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = Source Code Pro:pixelsize=12;3
font-1 = Font Awesome 5 Free:pixelsize=10;0
font-2 = DejaVuSansMono Nerd Font:pixelsize=12;2

modules-left = bspwm spotify
modules-center = date
modules-right = volume pkg redshift cpu temperature wlan eth battery

tray-position = right
tray-padding = 2
tray-background = ${root.background}

;override-redirect = true

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
